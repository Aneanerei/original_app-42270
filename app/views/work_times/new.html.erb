  <div class="book">
 <div class="page left-page"> 
   
  
    <div class="tabs">
      <button class="tab active"><p class="date white-text"><%= Date.today.strftime('%Y/%m/%d') %></p></button>
      <%= link_to "収入入力", new_income_path, class: "tab" %>
      <button class="tab">支出入力</button>
      <%= link_to new_work_time_path do %><button class="tab">労働時間入力</button><% end %>
      <button class="tab">アルバム</button>
      <button class="tab">分析</button>
      <button class="tab">日記</button>
    </div>

<div class="tab-content"> 
  <h2>労働時間の登録</h2>

  <%= form_with model: @work_time, url: work_times_path, local: true do |f| %>
    <div class="form-group">
      <%= f.label :date, "日付" %><br>
      <%= f.date_field :date, value: Date.today, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :labor_hour, "労働時間（時間）" %><br>
      <%= number_field_tag :labor_hour, nil, class: "form-control", min: 0 %>
    </div>

    <div class="form-group">
      <%= label_tag :labor_minute, "労働時間（分）" %><br>
      <%= number_field_tag :labor_minute, nil, class: "form-control", min: 0, max: 59 %>
    </div>

    <div class="form-group">
      <%= f.label :report, "作業日報（任意）" %><br>
      <%= f.text_area :report, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "登録する", class: "form-submit" %>
    </div>
  <% end %>

    </div>
  </div>

  <!-- 右ページ -->
  <div class="page">
    <h2>Information</h2>
